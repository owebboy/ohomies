<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation" {{#equal active 'home'}}class="active"{{/equal}}><a href="/">Home</a></li>
        <li role="presentation" {{#equal active 'messages'}}class="active"{{/equal}}><a href="/messages">Messages</a></li>
        <li role="presentation" {{#equal active 'friends'}}class="active"{{/equal}}><a href="/friends">Friends</a></li>
      </ul>
    </div>
    <div class="col-md-9">

      <h4>Friends</h4>

      <div class="list-group">
        {{#each friend}}
        <a class="list-group-item" href="/messages/create/{{id}}">{{username}}</a>
        {{/each}}
      </div>

      {{#each conversation}}
      <a href="/messages/conversation/{{id}}"><h3>{{friend}}</h3></a>
      {{else}}
      <p>No conversations! Create one now!</p>
      {{/each}}

    </div>
  </div>
</div>
