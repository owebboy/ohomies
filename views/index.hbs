<div class="container">
  {{#unless user}}
  <!-- no user -->
  <br>
  <div class="jumbotron">
    <h1>{{title}}</h1>
    <a class="btn btn-primary btn-lg" href="/auth/login">login</a>
    <a class="btn btn-default btn-lg" href="/auth/register">register</a>
  </div>
  {{else}}
  <div class="row">
    <div class="col-md-4">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation" {{#equal active 'home'}}class="active"{{/equal}}><a href="/">Home</a></li>
        <li role="presentation" {{#equal active 'messages'}}class="active"{{/equal}}><a href="/messages">Messages</a></li>
        <li role="presentation" {{#equal active 'friends'}}class="active"{{/equal}}><a href="/friends">Friends</a></li>
      </ul>
    </div>
    <div class="col-md-8">
      <p>Hey, {{user.username}}</p>

      <a href="/auth/logout">logout</a>
    </div>
  </div>
  {{/unless}}
</div>
